<% layout('layouts/boilerplate') %> 
    <h1>All Cats</h1>
    <!-- <div>
        <a href="/cats/new">Add a Cat</a>
    </div> -->
            <%for (let cat of cats) {%>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src='<%=cat.image %> ' class="img-fluid" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= cat.name %></h5>
                                <h6 class="card-title"><%= cat.headline %></h6>
                    
                                <p class="card-text"> 
                                    <small class='text-muted'>Adoption price: $<%= cat.price %></small>
                                    <br>
                                    <small class="text-muted"><%= cat.location %></small>
                                </p>
                                <a class='btn btn-dark' href="/cats/<%= cat._id %>">View <%= cat.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
