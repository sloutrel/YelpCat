<% layout('layouts/boilerplate') %> 
<div class="row">
   
    <div class="col-md-6 offset-md-3">
        <div class="card shadow"> 
            <h1 class="text-center card-title">Edit Animal</h1>
            <div class="card-body">
        <form action="/centers/<%=center._id %>/animals/<%=animal._id %>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
          <div class='mb-3'>
            <label class="form-label" for="name">Animal Name</label>
            <input class="form-control" type="text" id="name" name="animal[name]" value="<%=animal.name%>" autofocus required>
         </div>
         <div class='mb-3'>   
             <label class="form-label" for="species">Species</label>
            <input class="form-control" type="text" id="species" name="animal[species]" value="<%=animal.species%>" required>
        </div>
         <div class='mb-3'>   
             <label class="form-label" for="breed">Breed</label>
            <input class="form-control" type="breed" id="breed" name="animal[breed]" value="<%=animal.breed%>" required>
        </div>
   
        <div class='mb-3'>   
            <label class="form-label" for="age">Age</label>
           <input class="form-control" type="text" id="age" name="animal[age]" value="<%=animal.age%>" required>
        </div>
        <div class='mb-3'>   
          <label class="form-label" for="price">Rehoming Cost</label>
          <div class="input-group">
            <div class="input-group-text">$</div>
            <input class="form-control" type="price" id="price" name="animal[price]" value="<%=animal.price%>" required>
          </div>
        </div>
        <div class='mb-3'>   
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="animal[description]" required><%=animal.description%></textarea>
        </div>
          <div class="mb-3">
            <% animal.images.forEach(function(img, i){ %> 
                <img src="<%=img.thumbnail %>" class = "img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i %>">Delete?</label>
            <% }) %> 
        </div>
            <div class="mb-3">
                <button class="btn btn-dark">Update Animal</button>
            </div>
            </form>
            <a href="/centers/<%=center._id %>/animals">All Adoptable Animals for this Location</a>
            </div>
            </div>
    </div>
</div>
