<% layout('layouts/boilerplate') %> 

<div id="map" class="cluster-map"></div>
    <h1>All Animals</h1>
            <%for (let animal of animals) {%> 
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if(animal.images.length) { %> 
                                <img src='<%=animal.images[0].url %>' class="img-fluid mx-auto" alt="">
                                <% }else{ %> 
                                    <img src='https://images.unsplash.com/photo-1513245543132-31f507417b26?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=375&q=80' class="img-fluid" alt="">
                                <% } %> 
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= animal.name %></h5>
                                <p class="card-text"> 
                                    <small class='text-muted'>Adoption price: $<%= animal.price %></small>
                                    <br>
                                    <small class="text-muted"><%= animal.breed %></small>
                                </p>
                                <p id="index" class="card-text overflow-auto"><%= animal.description %></p>
                                <a class='btn btn-dark' href="<%=animal.url %>">View <%= animal.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 

            <script>
                const mapToken = "<%-process.env.MAPBOX_TOKEN %>";
                const animals = {features: <%-JSON.stringify(animals)%>};
            </script>

            <script src="/js/clusterAnimalMap.js"></script>