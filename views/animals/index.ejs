<% layout('layouts/boilerplate') %> 
    <h1>All Animals</h1>
            <%for (let animal of animals) {%> 
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img src='<%=animal.image %> ' class="img-fluid" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= animal.name %></h5>
                                <h6 class="card-title"><%= animal.headline %></h6>
                    
                                <p class="card-text"> 
                                    <small class='text-muted'>Adoption price: $<%= animal.price %></small>
                                    <br>
                                    <small class="text-muted"><%= animal.location %></small>
                                </p>
                                <a class='btn btn-dark' href="/animals/<%= animal._id %>">View <%= animal.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 
