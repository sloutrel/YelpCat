<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Location</h1>
    <div class="col-6 offset-3">

    <form action="/centers/<%= center._id %>?_method=PUT" method="POST" novalidate class='validate-form'>
    
        <div class='mb-3'>
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="center[name]" value="<%= center.name %>" required>
        </div>
        <div class='mb-3'>   
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="center[location]" value ="<%= center.location %>" required>
        </div>
        <div class='mb-3'>   
            <label class="form-label" for="age">Year Established</label>
            <input class="form-control" type="text" id="age" name="center[yearEst]" value ="<%= center.yearEst %>" required>
        </div>
        <div class='mb-3'>   
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="center[email]" value="<%=center.email %>" required>
       </div>
       <div class='mb-3'>   
            <label class="form-label" for="telephone">Phone</label>
            <input class="form-control" type="telephone" id="telephone" name="center[telephone]" value="<%=center.phone %>" required>
        </div>
        <div class='mb-3'>   
            <label class="form-label" for="image">Image URL</label>
            <input class="form-control" type="text" id="image" name="center[image]" value="<%=center.image%>" >
        </div>

        <div class='mb-3'>   
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="center[description]" required><%=center.description %></textarea>
        </div>

        <div class="mb-3">
                <button class="btn btn-dark">Update Location</button>
        </div>
    </form>
    <a href="/centers/<%=center._id %> ">Back to Location</a>

    </div>
</div>
   
       
   