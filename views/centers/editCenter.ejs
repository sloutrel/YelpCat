<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow"> 
            <h1 class="text-center card-title">Edit Location</h1>
            <div class="card-body">
                <form action="/centers/<%= center._id %>?_method=PUT" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
                <div class='mb-3'>
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="center[name]" value="<%= center.name %>" required>
                </div>
                <div class='mb-3'>   
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="center[location]" value ="<%= center.location %>" required>
                </div>
                <div class='mb-3'>   
                    <label class="form-label" for="age">Year Established</label>
                    <input class="form-control" type="text" id="age" name="center[yearEst]" value ="<%= center.yearEst %>" required>
                </div>
                <div class='mb-3'>   
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="center[email]" value="<%=center.email %>" required>
                </div>
                <div class='mb-3'>   
                    <label class="form-label" for="tel">Phone</label>
                    <input class="form-control" type="tel" id="tel" name="center[phone]" value="<%=center.phone %>" required>
                </div>
                <div class='mb-3'>   
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="center[description]" required><%=center.description %></textarea>
                </div>
                <div>
                    <label class="form-label" for="images">Add Images</label>
                    <div class="input-group input-group-md mb-3">
                        <input type="file" class="form-control" id="images" name="image" multiple >
                    </div>
                </div>
                <div class="mb-3">
                    <% center.images.forEach(function(img, i){ %> 
                        <img src="<%=img.thumbnail %>" class = "img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i %>">Delete?</label>
                    <% }) %> 
                </div>
                <div class="mb-3">
                        <button class="btn btn-dark">Update Location</button>
                </div>
                </form>
                <a href="/centers/<%=center._id %> ">Back to Location</a>
            </div>
        </div>
    </div>
</div>
   
       
   