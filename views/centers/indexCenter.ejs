<% layout('layouts/boilerplate') %> 

<div id="map" class="cluster-map"></div>
    <h1>All Locations</h1>
            <%for (let center of centers) {%>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if(center.images.length) { %> 
                            <img src='<%=center.images[0].url %>' class="img-fluid" alt="">
                            <% }else{ %> 
                                <img src='https://images.unsplash.com/photo-1513245543132-31f507417b26?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=375&q=80' class="img-fluid" alt="">
                            <% } %> 
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= center.name %></h5>
                                <h6 class="card-title text-muted"><%= center.location %></h6>
                    
                                <p class="card-text"> 
                                    <small class='text-muted'>Helping find animals their forever homes since: <%= center.yearEst %></small>
                                </p>
                                <a class='btn btn-dark' href="/centers/<%= center._id %>">View <%= center.name %></a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %> 

            <script>
                const mapToken = "<%-process.env.MAPBOX_TOKEN %>";
                const centers = {features: <%-JSON.stringify(centers)%>};
            </script>

            <script src="/js/clusterMap.js"></script>