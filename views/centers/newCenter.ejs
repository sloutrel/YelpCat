<% layout('layouts/boilerplate') %> 
<div class="row">
   
    <div class="col-md-6 offset-md-3">
        <div class="card shadow"> 
            <h1 class="text-center card-title">New Adoption Location</h1>
            <div class="card-body">
        <form action="/centers" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class='mb-3'>
                <label class="form-label" for="name">Location Name</label>
                <input class="form-control" type="text" id="name" name="center[name]" autofocus required>
             </div>
             <div class='mb-3'>   
                 <label class="form-label" for="location">City and State</label>
                <input class="form-control" type="text" id="location" name="center[location]" required>
            </div>
             <div class='mb-3'>   
                 <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="center[email]" required>
            </div>
            <div class='mb-3'>   
                <label class="form-label" for="telephone">Phone</label>
               <input class="form-control" type="telephone" id="telephone" name="center[phone]" required>
           </div>

            <div>
                <label class="form-label" for="images">Upload Images</label>
                <div class="input-group input-group-md mb-3">
                    <input type="file" class="form-control" id="images" name="image" multiple >
                </div>
            </div>

            <div class='mb-3'>   
                <label class="form-label" for="age">Year Established</label>
               <input class="form-control" type="text" id="age" name="center[yearEst]" required>
            </div>
            <div class='mb-3'>   
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="center[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-dark">Add Adoption Location</button>
            </div>
            </form>
            <a href="/centers/">All Adoption Locations</a>
            </div>
            </div>
    </div>
</div>